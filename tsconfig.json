{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "lib": ["dom", "es2015", "es2017"],
    "baseUrl": "src/",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": true,
    "noResolve": false
  },
  "include": [
    "./src/**/*",
    "./gatsby-node.ts",
    "./gatsby-config.ts",
    "./gatsby-browser.ts",
    "./gatsby-ssr.ts"
  ],
  "exclude": ["./node_modules/**/*", "./public/**/*"]
}
